{% set user = user|default(app.user) %}
{% if user and user.avatarFilename and public_file_exists('/uploads/avatar/' ~ user.avatarFilename)%}
    <img src="{{ asset('uploads/avatar/' ~ user.avatarFilename) }}" alt="{{ user.name }}" width="{{ width|default(32) }}" height="{{ height|default(32) }}" style="border-radius: 50px">
{% else %}
     <svg xmlns="http://www.w3.org/2000/svg" width="{{ width|default(32) }}" height="{{ height|default(32) }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin: 0 11px"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
{% endif %}